<GradientOrbs count={12} client:load />

<FlexLayout>
	<AboutSection />
	<Section>
		<div>
			<p>
				I am an experienced full stack developer with experience in modern web development
				technologies. <a class="link" href="/contact">Contact me?</a>
			</p>
			<section>
