---
import { AnimationControls } from "~/components/animations";

const pathname = Astro.url.pathname;
const links = [
	{
		label: "Home",
		href: "/",
	},
	{
		label: "About",
		href: "/about/",
	},
	{
		label: "Projects",
		href: "/projects/",
	},
	{
		label: "Experience",
		href: "/experience/",
	},
	{
		label: "Contact",
		href: "/contact/",
	},
];
---

<nav>
	<ul class="links">
		{
			links.map((link) => (
				<li>
					<a
						href={link.href}
						class="button"
						class:list={{ active: pathname === link.href }}
					>
						{link.label}
					</a>
				</li>
			))
		}
	</ul>
	<AnimationControls client:only="solid-js" />
</nav>

<style lang="scss">
	@use "~/styles/abstracts/variables" as *;
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		padding: 1rem;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.links {
		display: flex;
		flex-direction: row;
		gap: 16px;

		li {
			list-style-type: none;
		}

		a {
			padding: var(--spacing-xs) var(--spacing-small);
			border: $border;
			border-color: transparent;

			&:hover {
				color: var(--color);
			}

			&.active {
				border-color: var(--border);
				&:hover {
					border-color: var(--color);
				}
			}
		}
	}

	@media (max-width: 1024px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
