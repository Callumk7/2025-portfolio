---
import type { Project } from '~/types';

interface Props {
	project: Project
}

const { project } = Astro.props;
---

<div class="article">
	<div>
		<h3>{project.name}</h3>
		<a href="place">Read more.</a>
	</div>
	<p>{project.description}</p>
</div>

<style>
	.article {
		display: flex;
		flex-direction: column;
		gap: 24px;
		padding: 20px;

		h3 {
			font-size: 1.6em;
			text-decoration: underline;
			text-decoration-color: var(--scale-600);
		}
	}
</style>
