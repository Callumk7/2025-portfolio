---
interface Props {
	label: string;
	className?: string;
}

const { label, className } = Astro.props;
---

<div class:list={["contact-button", className]}>
	<div>
		<slot />
		<span>{label}</span>
	</div>
</div>

<style>
	.contact-button {
		padding: 20px;
		flex-grow: 1;
		width: 100%;
	}
	.contact-button:not(:first-child) {
		border-left: 1px solid var(--border);
	}
</style>
