---
interface Props {
	label: string;
}

const { label } = Astro.props;
---

<div class="contact-button hover-swipe">
	<div>
		<slot />
		<span>{label}</span>
	</div>
</div>

<style>
	.contact-button {
		padding: 20px;
		flex-grow: 1;
		width: 100%;
	}
	.contact-button:not(:first-child) {
		border-left: 1px solid var(--border);
	}

	.hover-swipe {
		position: relative;
		padding: 20px 40px;
		font-size: 24px;
		overflow: hidden;
		transition: color 0.3s ease;
		cursor: pointer;
	}
	.hover-swipe::before {
		content: "";
		position: absolute;
		top: 0;
		left: -100%; /* Start off-screen */
		width: 100%;
		height: 100%;
		background-color: var(--scale-600);
		transition: left 0.3s ease;
		z-index: -1;
	}
	.hover-swipe:hover::before {
		left: 0; /* Move in on hover */
	}

	.hover-swipe:hover {
		color: white; /* Change text color on hover */
		z-index: 1; /* Bring text above the pseudo-element */
	}
</style>
