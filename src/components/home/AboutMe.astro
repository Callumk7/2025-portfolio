---
const aboutMeContent = {
    name: "Your Name",
    title: "Web Developer & Designer",
    description: "Passionate about creating beautiful, functional web experiences that solve real-world problems.",
    skills: ["Astro", "React", "TypeScript", "Design", "UX/UI"]
};
---

<section class="about-me">
    <div class="container">
        <h2>About Me</h2>
        <div class="about-content">
            <div class="about-text">
                <h3>{aboutMeContent.name}</h3>
                <p class="title">{aboutMeContent.title}</p>
                <p class="description">{aboutMeContent.description}</p>
                <div class="skills">
                    <h4>Skills</h4>
                    <ul>
                        {aboutMeContent.skills.map(skill => (
                            <li>{skill}</li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .about-me {
        padding: 4rem 0;
        background-color: #f4f4f4;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    .about-content {
        display: flex;
        align-items: center;
    }
    .about-text {
        max-width: 600px;
    }
    h2 {
        text-align: center;
        margin-bottom: 2rem;
    }
    .title {
        color: #666;
        margin-bottom: 1rem;
    }
    .skills ul {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
    }
    .skills li {
        background-color: #e0e0e0;
        padding: 0.3rem 0.7rem;
        border-radius: 4px;
    }
</style>
