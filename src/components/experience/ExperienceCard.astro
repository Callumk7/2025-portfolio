---
interface Props {
	title: string;
	companyName: string;
	startDate: Date;
	endDate?: Date;
}

const { title, companyName, startDate, endDate } = Astro.props;
---

<div>
	<h4>{title}</h4>
	<pp class="bold">{companyName}</pp>
	<p>
		{startDate.toLocaleDateString("gmt")}
		{endDate ? `- ${endDate.toLocaleDateString("gmt")}` : ""}
	</p>
	<slot />
</div>

<style lang="scss">
	div {
		padding: 1rem;
	}

	h4 {
		margin-bottom: 0.2rem;
	}

	.bold {
		font-weight: 600;
	}
</style>
